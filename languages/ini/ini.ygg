grammar ini {
    display = "Initialization File"
    file = '*.ini'
}

entry union Item {
    | Section #Section
    | Record  #Record
}
// === section === ------------------------------------------------------------------------------------------------------
class Section {
    SectionTitle Record*
}
class SectionTitle {
    '[' Identifier ']'
}
// === record === -----------------------------------------------------------------------------------------------------
class Record {
    key:Identifier '=' value:RecordValue
}
union RecordValue {
    | Identifier
}
// === identifiers === -----------------------------------------------------------------------------------------------------
class Identifier {
    [a-zA-Z][a-zA-Z0-9]*
}
// === ignores === -----------------------------------------------------------------------------------------------------
ignore class WhiteSpace {
    \p{WhiteSpace}
}

@style(comment)
ignore union Comment {
    | @comment_line(';')
}